    <!--  현재머스테치 파일을 기준으로 다른파일 가져오기  -->
{{>layout/header}}


    <h1>스프링 부트로 시작하는 웹서비스 Ver.3.2</h1>

    <div class="col-md-12">
        <div class="row">
            <div class="col-md-6">
                <a href="/posts/save" role="button" class="btn btn-primary">글등록</a>
                <!-- 머스테치는 다른 언어와 같은 if문을 제공하지 않고 true/false 여부만 판단-->

                {{#memberName}}
                    Logged in as: <span id = "user">{{memberName}}</span>
                    <!-- 스프링 시큐리티에서 기본적으로 제공하는 로그아웃 URL-->
                    <a href="/logout" class="btn btn-info active" role="button">Logout</a>
                {{/memberName}}
                <!-- 머스테치에서 해당 값이 존재하지 않는 경우 ^를 사용-->
                {{^memberName}}
                    <!-- 스프링 시큐리티에서 기본적으로 제공하는 로그인 URL-->
                    <a href="/oauth2/authorization/google" class="btn btn-success active" role="button">Google Login</a>
                    <a href="/oauth2/authorization/naver" class="btn btn-secondary active" role="button">Naver Login</a>
                {{/memberName}}

            </div>
        </div>
        <br>
        <!-- 목록 출력 영역-->
        <table class="table table-horizontal table-bordered">
            <thead class="thead-strong">
            <tr>
                <th>게시글번호</th>
                <th>제목</th>
                <th>작성자</th>
                <th>최종수정일</th>
            </tr>
            </thead>
            <tbody id="tbody">
            <!--  posts라는 List를 순회 -->
            {{#posts}}
                <tr>
                    <td>{{id}}</td>
                    <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                    <td>{{author}}</td>
                    <td>{{modifiedDate}}</td>
                </tr>
            {{/posts}}
            </tbody>
        </table>
    </div>
    {{>layout/footer}}